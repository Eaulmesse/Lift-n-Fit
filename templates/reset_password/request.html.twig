{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	{% include "navbar.html.twig" %}

	<div class="container-fluid d-flex justify-content-center p-5">

		<div class="mr-5 lato text-success" >
			{% for flash_error in app.flashes('reset_password_error') %}
				<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
			{% endfor %}

			<h1>Mot de passe oublié ?</h1>

			{{ form_start(requestForm)}}

			{{ form_row(requestForm.email) }}
			<button class="btn btn-outline-success mt-2 float-start">Envoyer</button>
			{{ form_end(requestForm) }}
		</div>

		<div class="ps-5 desktop-only">
			<img src={{ asset('media/workout-login.jpg') }} class="img-fluid" alt="...">
		</div>
	</div>

    {% include "footer.html.twig" %}
{% endblock %}
